{
  "compilerOptions": {
    "noEmit": true,
    "target": "es2017",
    "module": "esnext",
    "moduleResolution": "node",
    "skipLibCheck": true,
    "rootDir": ".",
    "baseUrl": ".",
    "paths": {
      "@/*": ["./src/*"],
      "@tests/*": ["./tests/*"]
    },
    "strict": true,
    "esModuleInterop": true,
    "lib": ["dom", "dom.iterable", "es2018"],
    "removeComments": true,
    "experimentalDecorators": true
  },
  "include": ["src/**/*", "tests/**/*", "playwright.config.ts", "globals.d.ts"]
}
