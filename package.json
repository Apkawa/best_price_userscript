{
  "version": "0.5.3",
  "author": "Apkawa",
  "homepage": "https://github.com/Apkawa/best_price_userscript",
  "repository": "https://github.com/Apkawa/best_price_userscript",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/Apkawa/best_price_userscript/issues"
  },
  "readme": "README.md",
  "devDependencies": {
    "@babel/plugin-proposal-pipeline-operator": "^7.18.9",
    "@testing-library/dom": "^8.19.1",
    "@testing-library/jest-dom": "^5.16.5",
    "@types/eslint": "^8.4.10",
    "@types/eslint-plugin-prettier": "^3.1.0",
    "@types/glob": "^8.0.0",
    "@types/jest": "^29.2.4",
    "@types/jest-environment-puppeteer": "^5.0.3",
    "@types/jest-expect-message": "^1.1.0",
    "@types/lodash": "^4.14.191",
    "@types/node": "^18.11.18",
    "@types/node-fetch": "^2.6.2",
    "@types/prettier": "^2.7.2",
    "@types/webpack": "^5.28.0",
    "@typescript-eslint/eslint-plugin": "^5.47.1",
    "@typescript-eslint/parser": "^5.47.1",
    "chalk": "^4.1.2",
    "cross-env": "^7.0.3",
    "eslint": "^8.30.0",
    "eslint-config-google": "^0.14.0",
    "eslint-plugin-jest": "^27.1.7",
    "eslint-plugin-prettier": "^4.2.1",
    "eslint-plugin-userscripts": "0.2.10",
    "fromentries": "^1.3.2",
    "glob": "^8.0.3",
    "husky": "^8.0.2",
    "jest": "^29.3.1",
    "jest-environment-puppeteer": "^6.2.0",
    "jest-expect-message": "^1.1.3",
    "jest-localstorage-mock": "^2.4.25",
    "jest-puppeteer": "^6.2.0",
    "node-fetch": "^3.3.0",
    "patch-package": "^6.5.0",
    "path-browserify": "^1.0.1",
    "prettier": "^2.8.1",
    "process": "^0.11.10",
    "puppeteer": "^19.4.1",
    "raw-loader": "^4.0.2",
    "rxjs": "^6.5.1",
    "ts-jest": "^29.0.3",
    "ts-loader": "^9.4.2",
    "ts-node": "^10.9.1",
    "tsconfig-paths": "^4.1.1",
    "type-fest": "^3.5.0",
    "typescript": "^4.9.4",
    "typesync": "^0.9.2",
    "webpack": "^5.75.0",
    "webpack-cli": "^5.0.1"
  },
  "scripts": {
    "build": "cross-env TS_NODE_PROJECT='tsconfig-for-webpack-config.json' webpack --mode=production",
    "build:watch": "npm run build -- --watch",
    "postinstall": "patch-package",
    "prepare": "husky install",
    "synctypes": "typesync && npm i",
    "prettier": "prettier src/ --write",
    "test": "npm run test:unit",
    "test:unit": "jest tests/unit/ tests/jsdom/ src/ --coverage --colors --verbose=false",
    "test:e2e": "jest tests/e2e/",
    "lint": "eslint --ext js,ts,tsx --max-warnings=0 --fix src",
    "check": "npm run test && npm run lint",
    "pre-commit": "npm run prettier && npm run check && npm run build && git add -A ."
  },
  "engines": {
    "npm": ">=7.0.0",
    "node": ">=12.0.0"
  },
  "husky": {
    "hooks": {
      "pre-commit": "npm run pre-commit"
    }
  },
  "browserslist": [
    "last 2 years",
    "> 1%",
    "not dead"
  ],
  "babel": {
    "plugins": [
      [
        "@babel/plugin-proposal-pipeline-operator",
        {
          "proposal": "minimal"
        }
      ]
    ]
  },
  "prettier": {
    "bracketSpacing": false,
    "tabWidth": 2,
    "useTabs": false,
    "trailingComma": "all",
    "singleQuote": true,
    "printWidth": 100
  },
  "eslintConfig": {
    "env": {
      "browser": true,
      "es6": true,
      "es2017": true
    },
    "extends": [
      "eslint:recommended",
      "plugin:@typescript-eslint/eslint-recommended",
      "plugin:@typescript-eslint/recommended",
      "plugin:@typescript-eslint/recommended-requiring-type-checking"
    ],
    "parser": "@typescript-eslint/parser",
    "parserOptions": {
      "project": "tsconfig.json",
      "tsconfigRootDir": "."
    },
    "plugins": [
      "@typescript-eslint",
      "prettier",
      "jest"
    ],
    "rules": {
      "prettier/prettier": "off",
      "max-len": [
        "error",
        {
          "code": 100
        }
      ],
      "jest/valid-expect": [
        "error",
        {
          "maxArgs": 2
        }
      ]
    }
  },
  "dependencies": {
    "@types/jsdom-global": "^3.0.4",
    "jsdom-global": "^3.0.2"
  }
}
